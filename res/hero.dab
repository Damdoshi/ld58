  img = @"spider.dab"
]

[MoveModule
  speed = 1
  rotaSpeed = 0.2
  maxDivergeance = 0.5
]

[Unit
  weapon = "res/manual.dab"
  maxHp = 20
  armor = 2.5
  mass = 5
